---
import Layout from "../layouts/Layout.astro";
const title = "faith.tools - coming soon";
const description =
  "Using technology to help you love, serve, and become like Jesus";
---

<Layout title={title} description={description}>
  <main
    id="main"
    class="container p-6 flex flex-col gap-4 items-center"
    x-data="{ count: $persist(0) }"
  >
    <svg
      width={128}
      height={128}
      viewBox="0 0 512 512"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M19 261.5C159.8 115.136 353.36 176.945 494.16 340"
        stroke="currentColor"
        stroke-opacity="0.40"
        stroke-width="36"
        stroke-linecap="round"
        stroke-dasharray="1 56.28"></path>
      <path
        d="M18 260.305C158.8 406.669 353.36 336.055 494.16 173"
        stroke="currentColor"
        stroke-width="36"
        stroke-opacity="1"
        stroke-linecap="round"></path>
    </svg>

    <h1 class="flex items-baseline gap-2 text-3xl font-bold">
      faith.tools <div class="badge">coming soon</div>
    </h1>
    <p class="balanced m-0 max-w-[65ch] text-center">
      Using technology to help you love, serve, and become like Jesus
    </p>

    <div class="divider" />

    <p>
      Created by <a href="https://cameronpak.com" target="_blank">Cameron Pak</a
      >
    </p>
  </main>
</Layout>
